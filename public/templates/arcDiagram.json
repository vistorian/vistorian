{  
  "x": 700,  

  "data": "[dataDefinition]",
  "networks": "[networksDefinition]",

  "parameters": [
    {
      "name": "seriationMethod",
      "bind": {
        "input": "select",
        "options": [
          "optimal-leaf-order",
          "barycentre",
          "bandwidth-reduction",
          "pca"
        ],
        "labels": [
          "optimal-leaf-order",
          "barycentre",
          "bandwidth-reduction",
          "pca"
        ],
        "label": "Node ordering"
      },
      "value": "optimal-leaf-order"
    },
    {
      "name": "node_selection",
      "network": "network",
      "type": "selection",
      "action": "replace",
      "clearOnBackgroundClick": true
    },
    {
      "name": "neighbours",
      "source": "node_selection",
      "transform": [
        {
          "type": "neighbours",
          "direction": "both"
        }
      ]
    },
    {
      "name": "timeRange",
      "value": "[timeRange]"
    },
    {
      "name": "nodeTypeInShape",
      "value": "[nodeTypeInShape]"
    }
  ],

  "scales": [
    {
      "name": "radius",
      "type": "linear",
      "range": [ 15, 150 ],
      "domain": { "data": "network.nodes",  "field": "degree" }
    },
    {
      "name": "nodeShape",
      "type": "ordinal",
      "range": "[nodeTypeShapeScheme]",
      "domain": { "data": "network.nodes",  "field": "data.type0" }
    },
    {
      "name": "nodeColor",
      "type": "ordinal",
      "range": "[colorScheme]",
      "domain": { "data": "network.nodes",  "field": "data.type0" }
    },
    {
      "name": "edgeColor",
      "type": "ordinal",
      "range": "[colorScheme]",
      "domain": { "data": "network.links", "field": "linkType" }
    },
    {
      "name": "edgeWidth",
      "type": "linear",
      "range": [ 1.2, 3],
      "domain": { "data": "network.links", "field": "linkWeight" }
    },
    {
      "name": "edgeOpacity",
      "type": "linear",
      "range": [0.2, 0.8],
      "domain": { "data": "network.links", "field": "linkWeight" }
    }
  ],

  "orderings": [
    {
      "name": "degree_order",
      "data": "network.nodes",
      "orderBy": {"field": "degree", "direction": "descending"}
    }
  ],

  "layouts": [
    {
      "name": "layout",
      "data": "network.nodes",
      "pattern": "linear",
      "order": "degree_order",
      "orientation": "vertical"
    }
  ],

  "vis": [

    {
      "entries": "network.links",
      "layout": "layout",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
        "shape": "arc",
        "directionForShape": { "ordering": "degree_order"},
        "strokeWidth": { "field": "linkWeight", "scale": "edgeWidth" },
        "strokeOpacity": {
          "conditions": [
            {
              "test": "datum.data._time < params.timeRange[0] || datum.data._time > params.timeRange[1]",
              "value": 0
            },
            {
              "selectionIsEmpty": "node_selection.nodes",
              "field": "linkWeight",
              "scale": "edgeOpacity"
            },
            {
              "inSelection": "neighbours.links",
              "value": 1
            }
          ],
          "value": 0.2
        }
      }
    },

    {
      "entries": "network.nodes",
      "layout": "layout",

      "mark": {
        "type": "symbol",
        "shape": {
          "conditions": [
            {
              "test": "!params.nodeTypeInShape",
              "value": "circle"
            }
          ],
          "field": "data.type0",
          "scale": "nodeShape"
        },
        "area": {
          "field": "degree",
          "scale": "radius"
        },
        "fill": {
          "conditions": [
            {
              "test": "params.nodeTypeInShape",
              "value": "black"
            }
          ],
          "field": "data.type0",
          "scale": "nodeColor"
        },
        "stroke": "white",
        "opacity": {
          "conditions": [
            {
              "selectionIsEmpty": "node_selection.nodes",
              "value": 1
            },
            {
              "inSelection": "node_selection.nodes",
              "value": 1
            },
            {
              "inSelection": "neighbours.nodes",
              "value": 1
            }
          ],
          "value": 0.1
        }
      }
    },

    {
      "entries": "network.nodes",
      "layout": "layout",

      "mark": {
        "type": "text",
        "text": { "field": "id" },
        "dx": 10,
        "dy": 4
      }
    }

  ]
}
