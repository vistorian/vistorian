{
  "x": 700,  
  "height": 1400,

  "data": "[dataDefinition]",
  "networks": "[networksDefinition]",

  "scales": [
    {
      "name": "radius",
      "type": "linear",
      "range": [3, 150],
      "domain": { "data": "network.nodes", "field": "degree" }
    },
    {
      "name": "color",
      "type": "linear",
      "scheme": "reds",
      "domain": { "data": "network.nodes", "field": "degree" }
    }
  ],

  "orderings": [
    {
      "name": "degree_order",
      "data": "network.nodes",
      "orderBy": {"field": "degree", "direction": "descending"}
    }
  ],

  "layouts": [
    {
      "name": "layout",
      "data": "network.nodes",
      "pattern": "linear",
      "order": "degree_order",
      "orientation": "vertical"
    }
  ],

  "vis": [

    {
      "entries": "network.links",
      "layout": "layout",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
        "shape": "arc",
        "strokeOpacity": 0.2,
        "directionForShape": { "ordering": "degree_order"},
        "strokeWidth": { "field": "linkWeight" }
      }
    },

    {
      "entries": "network.nodes",
      "layout": "layout",

      "mark": {
        "type": "circle",
        "area": { "field": "degree", "scale": "radius" },
        "fill":   { "field": "degree", "scale": "color" },
        "tooltip": {"field": "id"}
      }
    },

    {
      "entries": "network.nodes",
      "layout": "layout",

      "mark": {
        "type": "text",
        "text": { "field": "id" },
        "dx": 10,
        "dy": 4
      }
    }

  ]
}
