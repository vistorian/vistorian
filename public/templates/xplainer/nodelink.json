{  
  "data": "[dataDefinition]",
  "parameters": [
    {
      "name": "pattern_selection",
      "network": "network",
      "action": "replace",
      "type": "selection",
      "clearOnBackgroundClick": true
    },
    {
      "name": "selected_marks",
      "network": "network",
      "action": "replace",
      "type": "selection",
      "clearOnBackgroundClick": true
    },
    {
      "name": "timeRange", 
      "value": "[timeRange]"
    },
    {
      "name": "nodeTypeInShape",
      "value": "[nodeTypeInShape]"
    }
  ],
  "networks": "[networksDefinition]",
  "layouts": [
    {
      "name": "layout",
      "network": "network",
      "type": "webcola",
      "avoidOverlap": true
    }
  ],
  "scales": [
    {
      "name": "radius",
      "type": "linear",
      "range": [ 15, 150 ],
      "domain": { "data": "network.nodes",  "field": "degree" }
    },
    {
      "name": "nodeShape",
      "type": "ordinal",
      "range": "[nodeTypeShapeScheme]",
      "domain": { "data": "network.nodes",  "field": "data.type0" }
    },
    {
      "name": "nodeColor",
      "type": "ordinal",
      "range": "[colorScheme]",
      "domain": { "data": "network.nodes",  "field": "data.type0" }
    },
    {
      "name": "edgeColor",
      "type": "ordinal",
      "range": "[colorScheme]",
      "domain": { "data": "network.links", "field": "linkType" }
    },
    {
      "name": "edgeWidth",
      "type": "linear",
      "range": [ 1.2, 3],
      "domain": { "data": "network.links", "field": "linkWeight" }
    },
    {
      "name": "edgeOpacity",
      "type": "linear",
      "range": [0.2, 0.8],
      "domain": { "data": "network.links", "field": "linkWeight" }
    }
  ],
  "vis": [
    {
      "entries": "network.links",
      "layout": "layout",
      "actions": [
        {
          "interaction": "select",
          "using": "[selectType]",
          "action": "replace",
          "selection": "pattern_selection"
        },
        {
          "interaction": "select",
          "using": "cursor",
          "event": "click",
          "action": "replace",
          "selection": "pattern_selection"
        }
      ],
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
        "parallelLinksType": "curve",
        "parallelLinksGap": 4,
        "stroke": {
          "conditions": [
            {
              "test": "!params.nodeTypeInShape",
              "value": "grey"
            }
          ], 
          "field": "linkType", "scale": "edgeColor" 
        },
        "strokeWidth": "0.1 * datum.linkWeight",
        "opacity":  { 
          "conditions": [
            {
              "selectionIsEmpty": "selected_marks.nodes",
              "value": 0.6
            },
            {
              "inSelection": "selected_marks.links",
              "value": 0.6
            }
          ],
          "value": 0.1
        },
        "shape": "line"
      }
    },
    {
      "entries": "network.nodes",
      "layout": "layout",
      "actions": [
        {
          "interaction": "select",
          "using": "[selectType]",
          "action": "replace",
          "selection": "pattern_selection"
        },
        {
          "interaction": "select",
          "using": "cursor",
          "event": "click",
          "action": "replace",
          "selection": "pattern_selection"
        }
      ],
      "mark": {
        "type": "symbol",
        "shape": {
          "conditions": [
            {
              "test": "!params.nodeTypeInShape",
              "value": "circle"
            }
          ],
          "field": "data.type0", "scale": "nodeShape"
        },
        "area": { "field": "degree", "scale": "radius" },
        "fill": {
          "conditions": [
            {
              "test": "params.nodeTypeInShape",
              "value": "black"
            }
          ],
           "field": "data.type0", "scale": "nodeColor"
        },
        "stroke": "white",
        "opacity": {
          "conditions": [
            {
              "selectionIsEmpty": "selected_marks.nodes",
              "value": 1
            },
            {
              "inSelection": "selected_marks.nodes",
              "value": 1
            }
          ],
          "value": 0.1
        },
        "tooltip": { "expression": "datum.id"}
      }
    }
  ]
}