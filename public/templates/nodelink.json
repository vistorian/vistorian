{
  "pan": {"modifierKeyRequired": [ ]},
  "zoom": true,

  "data": "[dataDefinition]",
  "networks": "[networksDefinition]",

  "layouts": [
    {
      "name": "layout",
      "network": "network",
      "type": "webcola",
      "avoidOverlap": true
    }
  ],

  "scales": [
    {
      "name": "radius",
      "type": "linear",
      "range": [30, 300],
      "domain": { "data": "network.nodes", "field": "degree" }
    },
    {
      "name": "nodeColor",
      "type": "linear",
      "scheme": "reds",
      "domain": { "data": "network.nodes", "field": "degree" }
    }
  ],

  "vis": [
    {
      "entries": "network.links",
      "layout": "layout",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target"
      }
    },
    {
      "entries": "network.nodes",
      "layout": "layout",
      "mark": {
        "type": "circle",
        "area": {
          "field": "degree",
          "scale": "radius"
        },
        "fill": {
          "field": "degree",
          "scale": "nodeColor"
        },
        "tooltip": {
          "expression": "datum.id + ' (degree ' + datum.degree + ')' "
        }
      }
    }
  ]
}