{

  "data": "[dataDefinition]",
  "networks": "[networksDefinition]",

  "parameters": [
    {
      "name": "select_node",
      "action": "replace",
      "network": "network",
      "type": "selection",
      "clearOnBackgroundClick": true
    }
  ],

  "orderings": [
    {
      "name": "order",
      "data": "network.nodes",
      "method": "optimal-leaf-order",
      "network": "network"
    }
  ],

  "layouts": [
    {
      "name": "layout",
      "data": "network.nodes",
      "pattern": "circle",
      "order": "order"
    }
  ],

  "scales": [
    {
      "name": "radius",
      "type": "linear",
      "range": [10, 280],
      "domain": { "data": "network.nodes", "field": "degree" }
    },
    {
      "name": "nodeColor",
      "type": "linear",
      "scheme": "reds",
      "domain": { "data": "network.nodes", "field": "degree" }
    },
    {
      "name": "edgeColor",
      "type": "ordinal",
      "scheme": "category10",
      "domain": {
        "data": "network.links",
        "field": "linkType"
      }
    },
    {
      "name": "edgeWidth",
      "type": "linear",
      "range": [1, 5],
      "domain": { "data": "network.links", "field": "linkWeight" }
    }
  ],

  "vis": [
    {
      "entries": "network.links",
      "layout": "layout",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
        "stroke": { "field": "linkType", "scale": "edgeColor" },
        "strokeWidth": { "field": "linkWeight", "scale": "edgeWidth" }
      }
    },
    {
      "entries": "network.nodes",
      "layout": "layout",
      "mark": {
        "type": "circle",
        "area": { "field": "degree", "scale": "radius" },
        "fill": { "field": "degree", "scale": "nodeColor" }
      }
    }
  ]
}