{  
  "pan": true, 
  "zoom": true,

  "data": "[dataDefinition]",
  "networks": "[networksDefinition]",
  "groupings": [
    {
      "name": "groupedBySource",
      "data": "network.links",
      "common": ["source.id"]
    },
    {
      "name": "groupedBySourceAndTarget",
      "data": "network.links",
      "common": [
        "source.id", "target.id"
      ]
    }
  ],
  "parameters":[
    {
      "name": "labelSizeParam",
      "bind": {
        "input": "range",
        "event": "onChange",
        "label": "Label Size",
        "min": "5",
        "max": "25",
        "step": "1"
      },
      "value": 13
    }
  ],
  "orderings": [
    {
      "name": "order",
      "data": "groupedBySource",
      "orderBy": {
        "field": "size",
        "direction": "descending"
      }
    }
  ],
  "layouts": [
    {
      "name": "layout",
      "data": "groupedBySource",
      "pattern": "cartesian",
      "y": [
        {
          "order": "order"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "opacity",
      "type": "linear",
      "range": [ 0.2, 1 ],
      "domain": { "data": "groupedBySourceAndTarget", "field": "size" }
    },
    {
      "name": "cellColor",
      "type": "ordinal",
      "range": "[colorScheme]",
      "domain": { "data": "network.links", "field": "linkType" }
    }
  ],
  "vis": [
    {
      "entries": "groupedBySource",
      "layout": "layout",
      "mark": {
        "type": "text",
        "text": {
          "field": "key[0]"
        },
        "fontSize": {
          "expression": "params.labelSizeParam"
        },
        "x": 120,
        "align": "right"
      }
    },
    {
      "entries": "groupedBySource",
      "layout": "layout",
      "groupings": [
        {
          "name": "groupedByTarget",
          "data": "entry.data",
          "common": ["target.id"]
        }
      ],
      "vis": [
        {
          "entries": "groupedByTarget",
          "mark": {
            "scaling": true,
            "type": "circle",
            "fill": "#F28527",
            "opacity": {
              "scale": "opacity",
              "expression": "datum.size"
            },
            "area": 30,
            "x": {
              "expression": "index * 6 + 130"
            },
            "y": -2,
            "tooltip": {
              "expression": "datum.key + ' (' + datum.size + ')'"
            }
          }
        }
      ]
    }
  ]
}