{
  "zoom": true,
  "pan": {"modifierKeyRequired": []},

  "data": "[dataDefinition]",
  "networks": "[networksDefinition]",

  "parameters": [
    {
      "name": "seriationMethod",
      "bind": {
          "input": "select",
          "options":  [ "optimal-leaf-order", "barycentre", "bandwidth-reduction", "pca" ],
          "labels":  [ "optimal-leaf-order", "barycentre", "bandwidth-reduction", "pca" ],
          "label": "Node ordering"

      },
      "value": "optimal-leaf-order"
    },
    {
      "name": "node_selection",
      "network": "network",
      "type": "selection",
      "action": "replace",
      "clearOnBackgroundClick": true
    },
    {
      "name": "neighbours",
      "source": "node_selection",
      "transform": [
        { "type": "neighbours", "direction": "both" }
      ]
    },
    {
      "name": "timeRange",
      "value": "[timeRange]"
    }
  ],

  "orderings": [
    {
      "name": "order",
      "data": "network.nodes",
      "method": { "parameter": "seriationMethod" },
      "network": "network"
    }
  ],

  "layouts": [
    {
      "name": "layout",
      "data": "network.nodes",
      "pattern": "circle",
      "order": "order"
    }
  ],

  "scales": [
    {
      "name": "radius",
      "type": "linear",
      "range": [ 20, 150 ],
      "domain": { "data": "network.nodes",  "field": "degree" }
    },
    {
      "name": "nodeShape",
      "type": "ordinal",
      "range": "[nodeTypeShapeScheme]",
      "domain": { "data": "network.nodes",  "field": "data.type0" }
    },
    {
      "name": "edgeColor",
      "type": "ordinal",
      "range": "[linkTypeColorScheme]",
      "domain": { "data": "network.links", "field": "linkType" }
    },
    {
      "name": "edgeWidth",
      "type": "linear",
      "range": [ 1.2, 3],
      "domain": { "data": "network.links", "field": "linkWeight" }
    },
    {
      "name": "edgeOpacity",
      "type": "linear",
      "range": [0.2, 0.8],
      "domain": { "data": "network.links", "field": "linkWeight" }
    }
  ],

  "vis": [
    {
      "entries": "network.links",
      "layout": "layout",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
        "stroke": { "field": "linkType", "scale": "edgeColor" },
        "strokeWidth": { "field": "linkWeight", "scale": "edgeWidth"},
        "opacity":  { 
          "conditions": [
            {
              "test": "datum.data._time < params.timeRange[0] || datum.data._time > params.timeRange[1]",
              "value": 0
            },
            {
              "selectionIsEmpty": "node_selection.nodes",
              "field": "linkWeight",
              "scale": "edgeOpacity"
            },
            {
              "inSelection": "neighbours.links",
              "value": 1
            }
          ],
          "value": 0.1
        },
        "shape": "line"
      }
    },
    {
      "entries": "network.nodes",
      "layout": "layout",
      "actions": [
        {
          "interaction": "select",
          "using": "cursor",
          "event": "mouseover",
          "action": "replace",
          "selection": "node_selection"
        }
      ],
      "mark": {
        "type": "symbol",
        "shape": {"field": "data.type0", "scale": "nodeShape"},
        "area": { "field": "degree", "scale": "radius" },
        "fill": "black",
        "stroke": "white",
        "opacity": {
          "conditions": [
            {
              "selectionIsEmpty": "node_selection.nodes",
              "value": 1
            },
            {
              "inSelection": "node_selection.nodes",
              "value": 1
            },
            {
              "inSelection": "neighbours.nodes",
              "value": 1
            }
          ],
          "value": 0.1
        }
      }
    },
    {
      "entries": "network.nodes",
      "layout": "layout",
      "ifInSelection": "node_selection.nodes",
      "mark": {
        "type": "text",
        "text": { "expression": "datum.id" },
        "dx": 5,
        "dy": 5,
        "fontSize": 13,
        "stroke": "white",
        "fontWeight": "bold",
        "strokeWidth": 0.5
      }
    },
    {
      "entries": "network.nodes",
      "layout": "layout",
      "if": "datum.degree > [lableImportance]",
      "mark": {
        "type": "text",
        "text": { 
          "conditions": [
            {
              "selectionIsEmpty": "node_selection.nodes",
              "value": { "expression": "datum.id"}
            }
          ]
        },
        "dx": 5,
        "dy": 5,
        "fontSize": 13,
        "stroke": "white",
        "fontWeight": "bold",
        "strokeWidth": 0.5
      }
    }
  ]
}