{  
  "x": 700,  

  "data": "[dataDefinition]",
  "networks": "[networksDefinition]",

  "parameters": [
    {
      "name": "seriationMethod",
      "bind": {
        "input": "select",
        "options": [
          "optimal-leaf-order",
          "barycentre",
          "bandwidth-reduction",
          "pca"
        ],
        "labels": [
          "optimal-leaf-order",
          "barycentre",
          "bandwidth-reduction",
          "pca"
        ],
        "label": "Node ordering"
      },
      "value": "optimal-leaf-order"
    },
    {
      "name": "node_selection",
      "network": "network",
      "type": "selection",
      "action": "replace",
      "clearOnBackgroundClick": true
    },
    {
      "name": "neighbours",
      "source": "node_selection",
      "transform": [
        {
          "type": "neighbours",
          "direction": "both"
        }
      ]
    },
    {
      "name": "timeRange",
      "value": "[timeRange]"
    }
  ],

  "scales": [
    {
      "name": "radius",
      "type": "linear",
      "range": [3, 150],
      "domain": { "data": "network.nodes", "field": "degree" }
    },
    {
      "name": "color",
      "type": "linear",
      "scheme": "reds",
      "domain": { "data": "network.nodes", "field": "degree" }
    },
    {
      "name": "edgeOpacity",
      "type": "linear",
      "range": [0.2, 0.8],
      "domain": { "data": "network.links", "field": "linkWeight" }
    }
  ],

  "orderings": [
    {
      "name": "degree_order",
      "data": "network.nodes",
      "orderBy": {"field": "degree", "direction": "descending"}
    }
  ],

  "layouts": [
    {
      "name": "layout",
      "data": "network.nodes",
      "pattern": "linear",
      "order": "degree_order",
      "orientation": "vertical"
    }
  ],

  "vis": [

    {
      "entries": "network.links",
      "layout": "layout",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
        "shape": "arc",
        "directionForShape": { "ordering": "degree_order"},
        "strokeWidth": { "field": "linkWeight" },
        "strokeOpacity": {
          "conditions": [
            {
              "test": "datum.data._time < params.timeRange[0] || datum.data._time > params.timeRange[1]",
              "value": 0
            },
            {
              "selectionIsEmpty": "node_selection.nodes",
              "field": "linkWeight",
              "scale": "edgeOpacity"
            },
            {
              "inSelection": "neighbours.links",
              "value": 1
            }
          ],
          "value": 0.2
        }
      }
    },

    {
      "entries": "network.nodes",
      "layout": "layout",

      "mark": {
        "type": "circle",
        "area": { "field": "degree", "scale": "radius" },
        "fill":   { "field": "degree", "scale": "color" },
        "tooltip": {"field": "id"}
      }
    },

    {
      "entries": "network.nodes",
      "layout": "layout",

      "mark": {
        "type": "text",
        "text": { "field": "id" },
        "dx": 10,
        "dy": 4
      }
    }

  ]
}
