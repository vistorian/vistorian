{
    "x": 120,
    "y": 120,
    "data": "[dataDefinition]",
    "networks": "[networksDefinition]",
    "parameters": [
        {
            "name": "seriationMethod",
            "bind": {
                "input": "select",
                "options": [ "optimal-leaf-order", "barycentre", "bandwidth-reduction", "pca" ],
                "labels": [ "optimal-leaf-order", "barycentre", "bandwidth-reduction", "pca" ],
                "label": "Seriation"
            },
            "value": "barycentre"
        },
        {
            "name": "timeRange",
            "value": "[timeRange]"
        },
        {
            "name": "pattern_selection",
            "network": "network",
            "action": "replace",
            "type": "selection",
            "clearOnBackgroundClick": true
        },
        {
            "name": "selected_marks",
            "network": "network",
            "action": "replace",
            "type": "selection",
            "clearOnBackgroundClick": true
        }
    ],
    "scales": [
        {
            "name": "opacity",
            "type": "linear",
            "range": [ 0.4, 1 ],
            "domain": { "data": "network.links", "field": "linkWeight" }
        },
        {
            "name": "cellColor",
            "type": "ordinal",
            "range": "[colorScheme]",
            "domain": { "data": "network.links", "field": "linkType" }
        }
    ],
    "orderings": [
        {
            "name": "order",
            "method": { "parameter": "seriationMethod" },
            "network": "network"
        }
    ],
    "tables": [
        {
            "name": "adjacencyMatrix",
            "data": "network.links",
            "rowOrder": { "order": "order", "field": "source" },
            "colOrder": { "order": "order", "field": "target" },
            "symmetric": true
        }
    ],
    "vis": [
        {
            "table": "adjacencyMatrix",
            "rowLabels": {
                "field": "source.id",
                "align": "right",
                "dx": -15,
                "fontSize": 10
            },
            "colLabels": {
                "field": "target.id",
                "dx": 15,
                "fontSize": 10
            },
            "rowLines": { "stroke": "lightgrey" },
            "colLines": { "stroke": "lightgrey" },
            "actions": [
                {
                    "interaction": "select",
                    "using": "[selectType]",
                    "action": "replace",
                    "selection": "pattern_selection"
                }
            ],
            "mark": {
                "type": "square",
                "area": { "expression": "(bounds.width * bounds.height)" },
                "x": { "expression": "bounds.x + bounds.width/2" },
                "y": { "expression": "bounds.y + bounds.height/2" },
                "fill": {
                    "condition": {
                        "test": "datum.size < 1",
                        "value": "white"
                    },
                    "scale": "cellColor",
                    "expression": "datum.data[0].linkType"
                },
                "opacity": {
                    "conditions": [
                        {
                            "test": "datum.size < 1",
                            "value": "0"
                        },
                        {
                            "inSelection": "selected_marks.links",
                            "scale": "opacity",
                            "expression": "datum.data[0].linkWeight"
                        },
                        {
                            "selectionIsNotEmpty": "selected_marks.links",
                            "value": 0.1
                        }
                    ],
                    "scale": "opacity",
                    "expression": "datum.data[0].linkWeight"
                },
                "tooltip": {"expression": "datum.key[0].id + ' -> ' + datum.key[1].id + (datum.data.length > 0 ? ' (degree:' + datum.data[0].linkWeight + ')': 0) " }
            }
        }
    ]
}