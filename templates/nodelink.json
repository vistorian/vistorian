{
  "data": "[dataDefinition]",
  "parameters": [
    {
      "name": "node_selection",
      "action": "replace",
      "network": "network",
      "type": "selection",
      "clearOnBackgroundClick": true
    }
  ],
  "networks": "[networksDefinition]",
  "layouts": [
    {
      "name": "layout",
      "network": "network",
      "type": "webcola",
      "avoidOverlap": true
    }
  ],
  "scales": [
    {
      "name": "radius",
      "type": "linear",
      "range": [ 20, 150 ],
      "domain": { "data": "network.nodes",  "field": "degree" }
    },
    {
      "name": "nodeShape",
      "type": "ordinal",
      "range": "[nodeTypeShapeScheme]",
      "domain": { "data": "network.nodes",  "field": "data.type0" }
    },
    {
      "name": "edgeColor",
      "type": "ordinal",
      "scheme": "[linkTypeColorScheme]",
      "domain": { "data": "network.links", "field": "linkType" }
    },
    {
      "name": "edgeWidth",
      "type": "linear",
      "range": [ 1.2, 3],
      "domain": { "data": "network.links", "field": "linkWeight" }
    },
    {
      "name": "edgeOpacity",
      "type": "linear",
      "range": [0.2, 0.8],
      "domain": { "data": "network.links", "field": "linkWeight" }
    }
  ],
  "vis": [
    {
      "entries": "network.links",
      "layout": "layout",
      "mark": {
        "type": "linkpath",
        "start": "source",
        "end": "target",
        "stroke": { "field": "linkType", "scale": "edgeColor" },
        "strokeWidth": { "field": "linkWeight", "scale": "edgeWidth"},
        "opacity":  { "field": "linkWeight", "scale": "edgeOpacity"},
        "shape": "line"
      }
    },
    {
      "entries": "network.nodes",
      "layout": "layout",
      "mark": {
        "type": "symbol",
        "shape": {"field": "data.type0", "scale": "nodeShape"},
        "area": { "field": "degree", "scale": "radius" },
        "fill": "black",
        "stroke": "white"
      }
    }
  ]
}